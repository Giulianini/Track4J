<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXProgressBar?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="recorderPane" minHeight="500.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <BorderPane minHeight="30.0">
         <center>
            <JFXProgressBar fx:id="progressBar" BorderPane.alignment="CENTER" />
         </center>
         <left>
            <ButtonBar>
               <buttons>
                  <JFXButton fx:id="startingButton" text="Record" />
                  <JFXButton fx:id="saveButton" text="Save" />
               </buttons>
            </ButtonBar>
         </left>
         <padding>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
         </padding>
      </BorderPane>
   </bottom>
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Canvas">
               <content>
                  <StackPane fx:id="canvasStackPane" prefHeight="150.0" prefWidth="200.0" />
               </content>
          </Tab>
          <Tab text="Derivative">
               <content>
                  <VBox fx:id="vbox" alignment="CENTER" />
               </content>
          </Tab>
            <Tab text="Gestures">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
   <top>
      <JFXToolbar minHeight="30.0" BorderPane.alignment="CENTER">
         <right>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <buttons>
                  <JFXButton fx:id="startButton" text="Start" />
                  <JFXButton fx:id="stopButton" text="Stop" />
               </buttons>
            </ButtonBar>
         </right></JFXToolbar>
   </top>
</BorderPane>
